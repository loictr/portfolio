---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    {frontmatter.image && (
      <img 
      src={`../${frontmatter.image}`} 
      alt={frontmatter.title}
      class="w-full h-64 object-cover rounded-lg shadow-md mb-8"
      />
    )}

    <h1 class="text-3xl font-bold text-gray-900 mb-4">{frontmatter.title}</h1>
    <div class="flex flex-wrap gap-2 mb-4">
      {frontmatter.tags.map(tag => (
        <span class="inline-block bg-gray-200 text-gray-800 text-sm font-semibold px-2 py-1 rounded">
          {tag}
        </span>
      ))}
    </div>
    <div class="flex gap-4 mb-8">
      {frontmatter.repoUrl && (
        <a 
          href={frontmatter.repoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 bg-gray-900 text-white rounded-md hover:bg-gray-800"
        >
          View Repository
        </a>
      )}
      {frontmatter.demoUrl && (
        <a 
          href={frontmatter.demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500"
        >
          Live Demo
        </a>
      )}
    </div>

    {frontmatter.videoId && (
      <div class="aspect-w-16 aspect-h-9">
        <iframe
          src={`https://www.youtube.com/embed/${frontmatter.videoId}?cc_load_policy=0&rel=0`}
          title="Project Demo Video"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          class="w-full h-[400px] rounded-lg shadow-md"
        ></iframe>
      </div>
    )}

    <div class="prose max-w-none mb-12">
      <slot />
    </div>
  </main>
</Layout>