---
interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
  tags: string[];
}

const { title, description, image, slug, tags } = Astro.props;
const projectUrl = `${import.meta.env.BASE_URL}/projects/${slug}`;
const imagePath = `${import.meta.env.BASE_URL}/${image}`;
---

<a href={projectUrl} class="group">
  <div class="bg-background-dark rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
    <img src={imagePath} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4">
      <h3 class="text-xl font-semibold text-text mb-2">{title}</h3>
      <p class="text-text-muted">{description}</p>
    </div>
    <div class="p-4 pt-0">
      <ul class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <li class="bg-primary bg-opacity-20 text-primary text-sm px-2 py-1 rounded">{tag}</li>
        ))}
      </ul>
    </div>
  </div>
</a>