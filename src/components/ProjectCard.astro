---
interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
  tags: string[];
}

const { title, description, image, slug, tags } = Astro.props;
const projectUrl = `projects/${slug}`;
---

<a href={projectUrl} class="group">
  <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4">
      <h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
      <p class="text-gray-600">{description}</p>
    </div>
    <div class="p-4 pt-0">
      <ul class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <li class="bg-gray-200 text-gray-800 text-sm px-2 py-1 rounded">{tag}</li>
        ))}
      </ul>
    </div>
  </div>
</a>