---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SocialLink from '../components/SocialLink.astro';

const PROFILE = {
  name: "LoÃ¯c Transler",
  title: "Freelance Developer",
  linkedin: "https://www.linkedin.com/in/loictransler/"
};

// Get all project files from the projects directory
const projects = (await Astro.glob('./projects/*.{md,astro}')).sort((a, b) => a.url.localeCompare(b.url));
const projectData = projects.map(project => ({
  title: project.frontmatter.title,
  description: project.frontmatter.description,
  image: project.frontmatter.image,
  tags: project.frontmatter.tags,
  slug: project.url?.split('/').pop() || ''
}));
---

<Layout title={`${PROFILE.name} - Portfolio`}>
  <main class="max-w-6xl mx-auto px-4 py-12">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{PROFILE.name}</h1>
      <p class="text-xl text-gray-600 mb-6">{PROFILE.title}</p>
      <div class="flex justify-center gap-4">
        <SocialLink href={PROFILE.linkedin} platform="linkedin" />
      </div>
    </div>

    <section>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projectData.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </section>
  </main>
</Layout>